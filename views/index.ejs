<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <h1>dasds</h1>
    <form action="/macros" method="POST">
        <input type="text" placeholder="name" name="name">
        <input type="text" placeholder="calories" name="calories">
        <input type="text" placeholder="macros" name="macros">
        <input type="text" placeholder="category" name="category">
        <button type="submit">SUBMIT</button>
    </form>
    <h2>Foods</h2>
    <ul class="foodMacros">
        <% for(var i = 0; i < foodMacros.length; i++){ %>
            <li class="foodMacro">
                <h3>Name: <%= foodMacros[i].name %></h3>
                <p>Macros: <%= foodMacros[i].macros %></p>
                <p>Category: <%= foodMacros[i].category %></p>
            </li>
        <% } %>
    </ul>

    <div>
        <h2>replace food</h2>
        <p>Replace the first food</p>
        <input type="text" placeholder="name" name="updateName" id="update-name">
        <input type="text" placeholder="new calories" name="newCalories" id="new-calories">
        <input type="text" placeholder="new macros" name="newMacros" id="new-macros">
        <input type="text" placeholder="new category" name="newCategory" id="new-category">
        <button id="update-button">replace calories/macros/category</button>
    </div>

    <div>
        <h2>remove food</h2>
    
        <button id="delete-button">delete name</button>
        <input type="text" placeholder="name" name=req.body.name id="delete-name">
        
    </div>
    <div id="message"></div>
    <script src="/main.js"></script>
</body>
</html>
